#version 420

uniform sampler2D uTex;
uniform float uThresh = 0.25;

in vec2 outUV;

out vec4 outColour;

void main()
{
    vec3 colour = texture(uTex,outUV).rgb;
    float lum = (colour.r + colour.g + colour.b)/3.0;
    outColour.a = 1.0;
    if(lum > uThresh)
    {
        outColour.rgb = colour;
    }
    else
    {
        outColour.rgb = vec3(0.0,0.0,0.0);
    }
  //  outColour.rgb = vec3(1.0,1.0,1.0);
}