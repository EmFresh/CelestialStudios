#version 410

layout (location  = 0) in vec3 vertPos;
layout (location  = 1) in vec2 vertUV;
layout (location  = 2) in vec3 vertNorm;

out vec2 fragUV;

uniform mat4 view;
uniform mat4 proj;
uniform mat4 object;

void main()
{
	gl_Position = ( proj * view * object * vec4(vertPos, 1.0));
	fragUV =  vertUV; 
}